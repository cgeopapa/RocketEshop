@using RocketEshop.Core.Enums;
@model RocketEshop.Model.GameCreateUpdateRequestDto;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="game.Title" class="control-label"></label>
                <input asp-for="game.Title" class="form-control" />
                <span asp-validation-for="game.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Description" class="control-label"></label>
                <input asp-for="game.Description" class="form-control" />
                <span asp-validation-for="game.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Price" class="control-label"></label>
                <input asp-for="game.Price" class="form-control" />
                <span asp-validation-for="game.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.ImageUrl" class="control-label"></label>
                <input asp-for="game.ImageUrl" class="form-control" />
                <span asp-validation-for="game.ImageUrl" class="text-danger"></span>
            </div>
            @*Εμφάνιση εικόνας*@
            <div class="form-group text-center">
                <img id="ProfilePicturePreview" class="border-info" style="max-width: 150px" />
            </div>


            <div class="form-group">
                <label asp-for="game.Quantity" class="control-label"></label>
                <input asp-for="game.Quantity" class="form-control" />
                <span asp-validation-for="game.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Release_Date" class="control-label"></label>
                <input class="form-control" type="date" asp-for="game.Release_Date" />
                <span asp-validation-for="game.Release_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Rating" class="control-label"></label>
                <select asp-for="game.Rating" class="form-control">
                    @foreach (Rating rating in Enum.GetValues(typeof(Rating)))
                    {
                        {<option value="@rating">@rating.ToString()</option>}
                    }
                </select>
                <span asp-validation-for="game.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Genres" class="control-label"></label>
                <select asp-for="game.Genres" class="form-control" multiple asp-items="Model.genres"></select>
                <span asp-validation-for="game.Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="col-md-4 offset-4 text-center">
            <img width="100%" id="ImageUrlPreview" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImageUrl").val();
        })

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
