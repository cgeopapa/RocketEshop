@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<RocketEshop.Core.Models.Genre>
@{
    ViewData["Title"] = Localizer["genre.list"];
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Localizer["genre.list"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genres" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; @Localizer["add.new.genre"]
            </a>
        </div>
    </div>
</div>
<br />
<table class="table tale-bordered table-striped" style="width:100%">
    <thead>
        <tr class="table-primary">
            <th>
                @Localizer["genre"]
            </th>
            <th>
                @Localizer["description"]
            </th>
            <th style="width: 3rem"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">

                        <a asp-controller="Genres" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>@Localizer["edit"]</a>
                        <a asp-controller="Genres" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash"></i>@Localizer["delete"]</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
