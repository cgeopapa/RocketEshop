@model RocketEshop.Infrastructure.Data.ViewModel.GameVM

@{
    ViewData["Title"] = "Game details";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-primary">
                        <p class="card-text">
                            <h5 class="card-title text-center">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text"><b>Release Date: </b>@Model.ReleaseDate.ToString("dd/MM/yy")</p>
                        <p class="card-text"><b>Rating: </b>@Model.Rating</p>
                        <p class="card-text">
                            <b>Genres: </b><br />
                            @foreach (Genre genre in Model.Genres)
                            {
                                <span class="badge rounded-pill text-bg-info">@genre.Name</span>
                            }
                        </p>
                        <p class="card-text">
                            <b>Platforms: </b><br />
                            @foreach (Genre genre in Model.Genres)
                            {
                                <span class="badge rounded-pill text-bg-info">@genre.Name</span>
                            }
                        </p>
                        <p class="card-text"><b>Quantity: </b>@Model.Quantity</p>
                        @if (Model.Quantity > 0)
                        {
                            <p class="card-text"><b>Available: </b>Yes</p>
                        }
                        else
                        {
                            <p class="card-text"><b>Available: </b>No</p>
                        }
                        <p class="card-text"><b>Price: </b>@Model.Price.ToString("c")</p>
                        
                        <p class="card-text"><b>Description: </b></p>
                        <p class="card-text" >@Model.Description</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-controller="Browse" asp-action="Index">
                                Back to List
                            </a>
                            @if (Model.Quantity <= 0)
                            {
                                <a class="btn btn-secondary text-white disabled"
                                   style="float: right;">
                                    <i class="bi bi-cart-plus"></i> Out of Stock
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-success text-white"
                                   style="float: right;"
                               asp-controller="ShoppingCart"
                               asp-action="AddItemToShoppingCart"
                               asp-route-id="@Model.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </a>
                            }

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>