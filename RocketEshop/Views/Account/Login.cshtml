@inject IViewLocalizer Localizer

@using Microsoft.AspNetCore.Mvc.Localization
@using RocketEshop.Infrastructure.Data.ViewModel;
@model LoginVM;

@{
    ViewData["Title"] = @Localizer["login"];
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4> @Localizer["login.account"]</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row log-bg">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4 mt-4">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <input class="btn btn-outline-success float-right" type="submit" value=" @Localizer["login"]" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index"> @Localizer["cancel"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>