@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RocketEshop.Core.Enums
@using RocketEshop.Infrastructure.Data.ViewModel
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

@model RocketEshop.Infrastructure.Data.ViewModel.HomeVM

@{
    ViewData["Title"] = "All games";
}
<img src="~/logo.png" width="10%" />

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://mmos.com/wp-content/uploads/2022/05/shadow-of-the-tomb-raider-key-art-banner.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Enjoy your favorite games</h5>
                <p>for free (jk)</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://wp-uploads.qualbert.com/2022/03/Divider.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Save the world</h5>
                <p>by giving us money</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://external-preview.redd.it/WjNqJN8azEEu5xlYbO0kw0kcBFGqS1ukgAQ3hK_vULg.jpg?auto=webp&s=215286930af1142e3f0013a4845421e8f39fe270" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>If you know this game</h5>
                <p>wtf is wrong with you</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br /><br />
<form asp-controller="Browse" asp-action="Search" class="d-flex my-4 px-4">
    <input name="QuickSearchFilter" class="form-control m-2" type="search" placeholder="Search">
    <button class="btn btn-primary m-2" type="submit">Search</button>
</form>
<div class="row">
    <h4>@Localizer["latest.additions"]</h4>
    @foreach (GameVM game in Model.LatestReleases)
    {
        @Html.Partial("Components/GameDetails", game)
    }
    <form asp-controller="Browse" asp-action="Search" class="d-flex justify-content-center">
        <input name="Sorting" class="form-control m-2" type="hidden" value="@SortingFilter.ReleaseDateAsc">
        <button class="btn btn-outline-primary" type="submit">Show more...</button>
    </form>
</div>
<br /><br />
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://blc.edu/wp-content/uploads/2021/09/Esports-Banner-2021.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://corp.formula1.com/wp-content/uploads/2021/10/ProChampBanner-scaled.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://previews.123rf.com/images/annetdebar/annetdebar1904/annetdebar190400020/123825175-esports-interior-banner-workplace-cyber-sportsman-gamer-a-desk-with-a-computer-and-headphones-and.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
</div>
<br /><br />
<div class="row">
    <h4>Good Ratings</h4>
    @foreach (var game in Model.GoodRatings)
    {
        @Html.Partial("Components/GameDetails", game)
    }
    <form asp-controller="Browse" asp-action="Search" class="d-flex justify-content-center">
        <input name="Sorting" class="form-control m-2" type="hidden" value="@SortingFilter.RatingAsc">
        <button class="btn btn-outline-primary" type="submit">Show more...</button>
    </form>
</div>
<div class="row">
    <h4>Trailers</h4>
</div>
