@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RocketEshop.Infrastructure.Data.ViewModel
@model RocketEshop.Infrastructure.Data.ViewModel.HomeVM

@{
    ViewData["Title"] = "All games";
}
<img src="~/logo.png" width="10%" />

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://mmos.com/wp-content/uploads/2022/05/shadow-of-the-tomb-raider-key-art-banner.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Enjoy your favorite games</h5>
                <p>for free (jk)</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://wp-uploads.qualbert.com/2022/03/Divider.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Save the world</h5>
                <p>by giving us money</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://external-preview.redd.it/WjNqJN8azEEu5xlYbO0kw0kcBFGqS1ukgAQ3hK_vULg.jpg?auto=webp&s=215286930af1142e3f0013a4845421e8f39fe270" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>If you know this game</h5>
                <p>wtf is wrong with you</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br /><br />
<form asp-controller="Browse" asp-action="QuickSearch" class="d-flex my-4 px-4">
    <input name="QuickSearchFilter" class="form-control m-2" type="search" placeholder="Search">
    <button class="btn btn-primary m-2" type="submit">Search</button>
</form>
<div class="row">
    <h4>Latest Additions</h4>
    @foreach (GameVM item in Model.LatestReleases)
    {
        <div class="col-lg-4 mb-3 d-flex align-items-stretch">
            <div class="card d-flex flex-column justify-content-between mb-3" style="width: 500px;">
                <div class="col-md-12">
                    <div class="card-header text-white bg-primary">
                        @item.Title
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <img src="@item.ImageUrl" style="width: 100%" alt="@item.Title">
                    </div>
                    <div class="col-md-5">
                        <div class="card-body">
                            <p class="card-text"><b>Price: </b>@item.Price &euro;</p>
                            <p class="card-text"><b>Quantity </b>@item.Quantity</p>
                            <p class="card-text"><b>Rating: </b>@item.Rating</p>
                            <div class="my-4">
                                @foreach (Genre genre in item.Genres)
                                {
                                    <span class="badge rounded-pill text-bg-info">@genre.Name</span>
                                }
                            </div>
                            @if (item.Quantity > 0)
                            {
                                <span class="badge fs-6 rounded-pill text-bg-primary">Available</span>
                            }
                            else
                            {
                                <span class="badge fs-6 rounded-pill text-bg-danger">Sold out</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-around">

                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye-fill"></i> Show Details
                    </a>
                    @if (item.Quantity <= 0)
                    {
                        <a class="btn btn-secondary text-white disabled">
                            <i class="bi bi-cart-plus"></i> Out of Stock
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-success text-white"
                        asp-controller="Orders"
                        asp-action="AddItemToShoppingCart"
                        asp-route-id="@item.Id">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                        </a>
                    }
                    
                </div>
            </div>
        </div>
    }
</div>
<br /><br />
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
