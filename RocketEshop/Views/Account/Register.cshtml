@inject IViewLocalizer Localizer

@using Microsoft.AspNetCore.Mvc.Localization
@using RocketEshop.Infrastructure.Data.ViewModel;
@model RegisterVM;

@{
    ViewData["Title"] = Localizer["register"];
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>@Localizer["register.new.account"]</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row log-bg">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4 mt-4">
                        <label asp-for="FullName" class="control-label">@Localizer["fullname"]</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="UserName" class="control-label">@Localizer["username"]</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="control-label">@Localizer["password"]</label>
                        <input asp-for="Password" class="form-control" id="pswdInput" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input type="checkbox" onclick="myFunction()">@Localizer["show.pswd"]
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="control-label">@Localizer["confirm.pswd"]</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <input class="btn btn-outline-success float-right" type="submit" value=@Localizer["register"] />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">@Localizer["cancel"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction() {
        var x = document.getElementById("pswdInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>